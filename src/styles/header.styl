header
    z-index 1
    position relative
    flex 0 1 auto
    text-emphasis outline
    .content--wrapper
        max-width calc(450px + 280px)
        padding-bottom: 3rem
        position: relative
    h1
        padding margin-xl margin-xl 0
        font-size: 2rem
        color lt-blue
        @media screen and (max-width: breakpoint-lg)
            padding margin-lg margin-lg 0
            max-width: breakpoint-lg
        @media screen and (max-width: breakpoint-md)
            padding margin-md margin-md 0
        @media screen and (max-width: breakpoint-sm)
            padding margin-sm margin-sm 0
        a
            font-variant: small-caps
            color transparent
            text-decoration: none
            -webkit-text-stroke-width: 1px
            -webkit-text-stroke-color: pink
.nav
    &--wrapper
        margin 0 margin-xl
        padding-left: 2rem
        border-bottom 1px solid pink
        @media screen and (max-width: breakpoint-lg)
            margin 0 margin-lg
        @media screen and (max-width: breakpoint-md)
            margin 0 margin-md
        @media screen and (max-width: breakpoint-sm)
            margin 0 margin-sm
            font-size .8rem
            padding-left 0
    &--item
        display: inline-block
        margin-right: 1em
        a   
            text-decoration: none
            color pink
            text-transform: uppercase
            font-weight 700
            padding 0em .5em
            display: inline-block
            border 1px solid pink
            position relative
            bottom -1px
            cursor pointer
            transition all .1s ease-in-out
            position relative
            &:before
                content ''
                box-sizing: border-box
                position absolute
                display inline-block
                left 0
                right 0
                top 0
                bottom 0
                background pink
                z-index -1
                max-width 0
                overflow hidden
                transition: max-width .2s ease-in-out
            &:hover
                color blue
                &:before
                    max-width: 300px
            &.active
                background pink 
                color blue
                border 1px solid pink
.rain
    &:not(.stormin)
        display: none
